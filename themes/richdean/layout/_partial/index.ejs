<% page.posts.each(function(post) { %>
<section class="post-summary">
  <h3 class="post-title">
    <a href="<%- config.root %><%- post.path %>"><%- post.title %></a>
  </h3>

  <div class="post-date">
    <%= date(post.date, 'D MMMM YYYY') %>
  </div>

  <div>
    <%- truncate(strip_html(post.content), {length: 200, separator: ' '}) %>
  </div>

  <% if (post.tags && post.tags.length) { %>
    <div class="taglist">
      <% count = post.tags.length %>
      <% post.tags.forEach(function(tag, index) { %>
        <a href='<%= config.root + tag.path %>'><%= tag.name %></a>
        <% }); %>
      </div>
  <% } %>
</section>
<% }); %>
<nav class="pagination" role="pagination">
  <% if (page.prev) { %><a class="newer-posts" href="<%- url_for(page.prev_link) %>">← Newer Posts</a><% } %>
  <% if (page.next) { %><a class="older-posts" href="<%- url_for(page.next_link) %>">Older Posts →</a><% } %>
</nav>
